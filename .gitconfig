[user]

	name = ryo8ma
	email =

[color]

	ui = auto
	diff = auto
	status = auto
	branch = auto

[alias]

	graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
	graph-s = log --oneline --graph --decorate
	s = status
	mg = merge --no-ff
	co = checkout
	cm = commit
	sw = switch
	review = diff origin/master...
	firstcom = "commit --allow-empty -m \"Initial commit\""

[apply]

	# Detect whitespace errors when applying a patch
	whitespace = fix

[help]

	autocorrect = 1

[credential]

	helper = osxkeychain

[diff]

	tool	= vimdiff
	algorithm = histogram
	compactionHeuristic = true

[merge]

	log = true
	ff = false

[pull]
	ff = only
